{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .container {
            max-width: 600px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-label {
            font-weight: bold;
        }
        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .btn-primary {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .error-message {
            color: red;
            font-size: 14px;
        }
    </style>
{% endblock %}
{% block body %}
<div class="container mt-5">
    
    <div class="row">
        <div class="col-md-6 offset-md-3">
            {{ form_start(form, {'attr': {'class': 'my-4', 'novalidate': 'novalidate'}}) }}
          
            <div class="form-group">
                {{ form_label(form.nomEv, 'Nom Evenement', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.nomEv, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nomEv) }}
            </div>
            <div class="form-group">
                {{ form_label(form.typeEv, 'Type Evenement', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.typeEv, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.typeEv) }}
            </div>
              <div class="form-group">
                {{ form_label(form.imageEv, 'Image Evenement', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.imageEv, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.imageEv) }}
            </div>
            <div class="form-group">
                {{ form_label(form.date, 'Date', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.date) }}
            </div>
            <div class="form-group">
                {{ form_label(form.descriptionEv, 'Description Evenement', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.descriptionEv, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.descriptionEv) }}
            </div>
            <div class="form-group">
                {{ form_label(form.codeParticipant, 'Code Participant', {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(form.codeParticipant, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.codeParticipant) }}
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}
